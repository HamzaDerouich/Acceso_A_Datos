<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="UPPersonas"
		transaction-type="RESOURCE_LOCAL">
		<!-- Persistence provider -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- Representamos las clases / Opcional, si no se ponen se mapean todas -->
		<class>MapeoOR.Ejercicio13.Alumno</class>
		<class>MapeoOR.Ejercicio13.Nota</class>
		<class>MapeoOR.Ejercicio13.Modulo</class>
		<class>MapeoOR.Ejercicio13.Nota</class>
		<class>MapeoOR.Ejercicio13.Imparte</class>
        <class>MapeoOR.Ejercicio13.Profesor</class>
		<!-- Solamente se mapean las clases representadas con class -->
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<!-- Configuración de conexión -->
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/Personas" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			<!-- Configuración de Hibernate -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL8Dialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
